<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.InstagramClone" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
    </style>

    <style name="Theme.InstagramClone" parent="Base.Theme.InstagramClone" />

    <style name="settingsBG">
        <item name="android:background">#FFFFFF</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="CustomBottomSheetBackground" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="android:background">@drawable/rounded_top_corners</item>
        <item name="android:backgroundTint">@color/menuBgColor</item>
    </style>

    <style name="MyTextViewStyle" parent="android:Widget.TextView">
        <item name="android:textColor">@color/little_gray</item>
        <item name="android:background">@color/transparent</item>
    </style>

</resources>